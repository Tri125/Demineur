<Window x:Class="Demineur.FenetreNouvellePartie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FenetreNouvellePartie" Height="300" Width="300">
    <Grid>
        <GroupBox Header="Niveau" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,10,0,0" Height="103" Width="154">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="144">
                <RadioButton Content="Avancé" Margin="0,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton Content="Débutant" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <RadioButton Content="Personnalisé" Margin="0,54,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Paramètres de jeu" HorizontalAlignment="Left" Margin="45,118,0,0" VerticalAlignment="Top" Height="142" Width="205">
            <Grid>
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Largeur" VerticalAlignment="Top" Margin="115,0,0,0"/>
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Hauteur" VerticalAlignment="Top" RenderTransformOrigin="0.642,1.455" Margin="112,28,0,0"/>
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Mines" VerticalAlignment="Top" Margin="112,64,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
