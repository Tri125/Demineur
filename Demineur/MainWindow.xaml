<Window x:Class="Demineur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Row contenant le ToolBarTray, taille fixe car l'affichage devenait de taille disproportionner et indisirable. Reste élégant à la vue.-->
            <RowDefinition Height="25"></RowDefinition>
            <!-- Row contenant le reste des contrôles -->
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" IsMainMenu="True">
            <MenuItem Header="Configuration" Click="MenuItem_Click"/>
        </Menu>
        <Grid Grid.Row="1" Name="gridPrincipale">
        </Grid>
    </Grid>
</Window>
